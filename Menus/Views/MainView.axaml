<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Menus.ViewModels"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Menus.Views.MainView"
             x:DataType="vm:MainViewModel">
    
    <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

    <!-- Menu lateral -->
    <fa:NavigationView PaneDisplayMode="Left" 
                       SelectedItem="{Binding NavigationService.SelectedMenuItem}"
                       MenuItemsSource="{Binding NavigationService.MenuItems}">
        <!-- <fa:NavigationView.MenuItems> -->
        <!--     <fa:NavigationViewItem Content="Inicio" IconSource="Home"/> -->
        <!--     <fa:NavigationViewItem Content="Productos" IconSource="Shop"/> -->
        <!-- </fa:NavigationView.MenuItems> -->
        <ContentControl Content="{Binding NavigationService.CurrentView}"/>
    </fa:NavigationView>
  
</UserControl>
