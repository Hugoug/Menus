<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Menus.ViewModels"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             Width="1280" Height="720" 
             x:Class="Menus.Views.ShopView"
             x:DataType="vm:ShopViewModel">
    
    <Design.DataContext>
        <vm:ShopViewModel/>
    </Design.DataContext>
    
    <Grid>
            <TabControl Name="tabControl" SelectedIndex="{Binding PageIndex}">
                <TabControl.ContentTemplate>
                    <DataTemplate x:DataType="System:Object">
                            <TransitioningContentControl Content="{Binding}" 
                                                         IsTransitionReversed="{Binding ElementName=tabControl,
                                                         Path=DataContext.IsReverse}">
                                <TransitioningContentControl.PageTransition>
                                    <!-- <CrossFade Duration="0:0:0.5"/> -->
                                    <!-- <PageSlide Duration="0:0:0.5"/> -->
                                    <Rotate3DTransition Duration="0:0:0.5" />
                                </TransitioningContentControl.PageTransition>
                            </TransitioningContentControl>
                    </DataTemplate>    
                </TabControl.ContentTemplate>
                
                <TabControl.Items>
                    <TabItem Header="LENGUAGES">
                        <StackPanel Background="MediumPurple" DataContext="{Binding ElementName=tabControl, Path=DataContext}">
                            
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ElementName=tabControl, 
                                       Path=SelectedIndex}"
                                       Margin="20"/>
                            
                            
                            <!--LISTA DE LENGUAJES DE INTERES-->
                            <ListBox ItemsSource="{Binding LanguageList}" 
                                     Name="ListaLenguajes"
                                     HorizontalAlignment="Center"
                                     SelectionMode="Multiple, Toggle" 
                                     SelectedItems="{Binding SelectedLanguages}"
                                     Height="350" Width="500">
                                
                                <Interaction.Behaviors>
                                    <EventTriggerBehavior EventName="SelectionChanged">
                                        <InvokeCommandAction 
                                            Command="{Binding SelectedLanguagesChangedCommand}"
                                            CommandParameter="{Binding ElementName=ListaLenguajes,
                                            Path=SelectedItem}"/>
                                    </EventTriggerBehavior>
                                </Interaction.Behaviors>
                                
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                
                                <ListBox.Styles>
                                    <!-- <Style Selector="ListBoxItem:selected"> -->
                                    <!--     <Setter Property="Background" Value="Chartreuse"/> -->
                                    <!-- </Style> -->
                                
                                    <!--Card seleccionada-->
                                    <Style Selector="ListBoxItem:selected controls|Card">
                                        <Setter Property="Background" Value="Aquamarine"/>
                                        <Setter Property="BorderBrush" Value="Blue"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </ListBox.Styles>
                                
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                           <controls:Card Width="150" Height="150"
                                                          VerticalAlignment="Top"
                                                          Classes="MiTarjeta">
                                               <StackPanel Margin="0,4" Background="AliceBlue">
                                                   <Image Width="70" Height="70" Margin="10" 
                                                          Source="{Binding ImagePath}"/>
                                                   <TextBlock Foreground="Black" 
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Text="{Binding Name}" 
                                                              TextWrapping="Wrap"/>
                                               </StackPanel>
                                           </controls:Card>
                                       </DataTemplate>
                                   </ItemsControl.ItemTemplate>
                            </ListBox>
                            
                            <TextBlock Text="{Binding Info}"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       Margin="10"/>
                            
                            <Button Content="SIGUIENTE" 
                                    Margin="10"
                                    IsEnabled="{Binding IsLanguageSelected}"
                                    Classes="MiBoton"
                                    Width="200"
                                    Command="{Binding irAdelanteCommand}"/>
                            
                        </StackPanel>
                    </TabItem>
                    
                    <TabItem Header="ENTORNOS">
                        <StackPanel Background="MediumPurple" DataContext="{Binding ElementName=tabControl, Path=DataContext}">
                            
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ElementName=tabControl, 
                                       Path=SelectedIndex}"
                                       Margin="20"/> 
                            
                            
                             <!--LISTA DE ENTORNOS DE INTERES-->
                            <ListBox ItemsSource="{Binding EntornosList}" 
                                     Name="ListaEntornos"
                                     HorizontalAlignment="Center"
                                     SelectionMode="Multiple, Toggle" 
                                     SelectedItems="{Binding SelectedEntornos}"
                                     Height="350" Width="500">
                                
                                <Interaction.Behaviors>
                                    <EventTriggerBehavior EventName="SelectionChanged">
                                        <InvokeCommandAction 
                                            Command="{Binding SelectedEntornosChangedCommand}"
                                            CommandParameter="{Binding ElementName=ListaEntornos,
                                            Path=SelectedItem}"/>
                                    </EventTriggerBehavior>
                                </Interaction.Behaviors>
                                
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                
                                <ListBox.Styles>
                                    <!-- <Style Selector="ListBoxItem:selected"> -->
                                    <!--     <Setter Property="Background" Value="Chartreuse"/> -->
                                    <!-- </Style> -->
                                    
                                    <!--Card seleccionada-->
                                    <Style Selector="ListBoxItem:selected controls|Card">
                                        <Setter Property="Background" Value="Aquamarine"/>
                                        <Setter Property="BorderBrush" Value="Blue"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </ListBox.Styles>
                                
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                           <controls:Card Width="150" Height="150"
                                                          VerticalAlignment="Top"
                                                          Classes="MiTarjeta">
                                               <StackPanel Margin="0,4" Background="AliceBlue">
                                                   <Image Width="70" Height="70" Margin="10" 
                                                          Source="{Binding ImagePath}"/>
                                                   <TextBlock Foreground="Black" 
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Text="{Binding Name}"
                                                              TextWrapping="Wrap"/>
                                               </StackPanel>
                                           </controls:Card>
                                       </DataTemplate>
                                   </ItemsControl.ItemTemplate>
                            </ListBox>
                            
                            <Button Content="ANTERIOR" 
                                    Margin="15"
                                    Classes="MiBoton2"
                                    Width="200"
                                    Command="{Binding irAtrasCommand}"/> 
                            
                            <Button Content="SIGUIENTE" 
                                    Margin="10"
                                    Width="200"
                                    Command="{Binding irAdelanteCommand}"/>
                            
                            <HyperlinkButton Classes="MiBotonImagen"/>
                            
                        </StackPanel>
                    </TabItem>
                    
                    <TabItem Header="CONFIGURACIÓN">
                        <StackPanel Background="CadetBlue" DataContext="{Binding ElementName=tabControl, Path=DataContext}">
                            
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ElementName=tabControl, 
                                       Path=SelectedIndex}"
                                       Margin="20"/> 
                            
                            
                            <Button Content="ANTERIOR" 
                                    Margin="15"
                                    Width="200"
                                    Command="{Binding irAtrasCommand}"/>
                            
                            <Button Content="SIGUIENTE" 
                                    Margin="10"
                                    Width="200"
                                    Command="{Binding irAdelanteCommand}"/>
                        </StackPanel>
                    </TabItem>
                    
                </TabControl.Items>
            </TabControl>
    </Grid>
</UserControl>
